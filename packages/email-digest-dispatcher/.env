# Logger
LOG_LEVEL=info

# ReadModel SQL DB
READMODEL_SQL_DB_HOST=localhost
READMODEL_SQL_DB_PORT=6002
READMODEL_SQL_DB_NAME=root
READMODEL_SQL_DB_USERNAME=root
READMODEL_SQL_DB_PASSWORD=root
READMODEL_SQL_DB_USE_SSL=false

# Digest Tracking DB
DIGEST_TRACKING_DB_HOST=localhost
DIGEST_TRACKING_DB_PORT=6007
DIGEST_TRACKING_DB_NAME=root
DIGEST_TRACKING_DB_USERNAME=root
DIGEST_TRACKING_DB_PASSWORD=root
DIGEST_TRACKING_DB_USE_SSL=false
DIGEST_TRACKING_DB_SCHEMA=digest_tracking

# Digest frequency (days between digest emails for same user)
DIGEST_FREQUENCY_DAYS=7

# Kafka Producer
PRODUCER_KAFKA_BROKERS=localhost:9092
PRODUCER_KAFKA_CLIENT_ID=email-notification-digest
PRODUCER_KAFKA_DISABLE_AWS_IAM_AUTH=true
PRODUCER_KAFKA_LOG_LEVEL=WARN

# Email Dispatch Topic
EMAIL_DISPATCH_TOPIC=email-dispatch

# AWS (used by Kafka if IAM auth is enabled)
AWS_REGION=eu-south-1
