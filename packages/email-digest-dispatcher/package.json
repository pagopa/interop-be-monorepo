  "license": "MPL-2.0",
  "description": "PagoPA Interoperability Email Notification Digest Dispatcher",
  "main": "dist",
  "type": "module",
  "scripts": {
    "test": "vitest --config vitest.config.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:autofix": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "start": "tsx -r 'dotenv-flow/config' --watch ./src/index.ts",
    "build": "tsc && pnpm cpx './src/resources/**/*' './dist/resources'",
    "check": "tsc --project tsconfig.check.json",
    "generate-mock-email": "tsx ./scripts/generate-mock-email.ts"
  },
  "keywords": [],
  "devDependencies": {
    "@pagopa/eslint-config": "catalog:",
    "@types/node": "20.19.9",
    "cpx2": "7.0.1",
