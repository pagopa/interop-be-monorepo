    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "1.6.1",
    "@types/pg": "catalog:"
  },
  "dependencies": {
    "dotenv-flow": "catalog:",
    "drizzle-orm": "catalog:",
    "kafka-iam-auth": "workspace:*",
    "kafkajs": "catalog:",
    "pagopa-interop-commons": "workspace:*",
    "pagopa-interop-models": "workspace:*",
    "pagopa-interop-readmodel": "workspace:*",
    "pagopa-interop-readmodel-models": "workspace:*",
    "pg": "catalog:",
    "ts-pattern": "catalog:",
    "zod": "catalog:"
