{
  "name": "pagopa-interop-authorization-server",
  "version": "1.0.0",
  "license": "MPL-2.0",
  "description": "PagoPA Interoperability service for authorization",
  "main": "dist",
  "type": "module",
  "scripts": {
    "test:unit": "vitest --config vitest.config.ts",
    "test:api": "vitest --config vitest.api.config.ts",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test": "pnpm test:api && pnpm test:integration && pnpm test:unit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:autofix": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "start": "tsx -r 'dotenv-flow/config' --watch ./src/index.ts",
    "build": "tsc",
    "check": "tsc --project tsconfig.check.json"
  },
  "keywords": [],
  "devDependencies": {
    "@pagopa/eslint-config": "catalog:",
    "@types/express": "catalog:",
    "@types/node": "catalog:",
    "@types/supertest": "catalog:",
    "eslint": "catalog:",
    "pagopa-interop-commons-test": "workspace:*",
    "prettier": "catalog:",
    "supertest": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "catalog:",
    "@aws-sdk/client-kms": "catalog:",
    "@aws-sdk/util-dynamodb": "catalog:",
    "@zodios/core": "catalog:",
    "@zodios/express": "catalog:",
    "axios": "catalog:",
    "dotenv-flow": "catalog:",
    "express": "catalog:",
    "kafka-iam-auth": "workspace:*",
    "pagopa-interop-api-clients": "workspace:*",
    "pagopa-interop-application-audit": "workspace:*",
    "pagopa-interop-client-assertion-validation": "workspace:*",
    "pagopa-interop-commons": "workspace:*",
    "pagopa-interop-dpop-validation": "workspace:*",
    "pagopa-interop-models": "workspace:*",
    "ts-pattern": "catalog:",
    "zod": "catalog:"
  }
}
