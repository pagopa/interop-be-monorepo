{
  "name": "pagopa-interop-certified-email-sender",
  "private": true,
  "version": "1.0.0",
  "license": "MPL-2.0",
  "description": "Pagopa Interop Certified Email Sender",
  "main": "dist",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "test": "vitest --config vitest.config.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:autofix": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "start": "tsx -r 'dotenv-flow/config' --watch  ./src/index.ts",
    "build": "tsc && pnpm cpx './src/resources/**/*' './dist/resources'",
    "check": "tsc --project tsconfig.check.json"
  },
  "keywords": [],
  "devDependencies": {
    "@pagopa/eslint-config": "3.0.0",
    "@types/node": "20.19.9",
    "@types/nodemailer": "6.4.17",
    "cpx2": "7.0.2",
    "eslint": "9.26.0",
    "pagopa-interop-commons-test": "workspace:*",
    "prettier": "2.8.8",
    "tsx": "4.19.1",
    "typescript": "5.4.5",
    "vitest": "4.0.18"
  },
  "dependencies": {
    "dotenv-flow": "4.1.0",
    "kafka-iam-auth": "workspace:*",
    "kafkajs": "2.2.4",
    "nodemailer": "7.0.11",
    "pagopa-interop-commons": "workspace:*",
    "pagopa-interop-models": "workspace:*",
    "pagopa-interop-readmodel": "workspace:*",
    "ts-pattern": "5.2.0",
    "zod": "3.23.8"
  }
